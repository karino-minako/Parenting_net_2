<!DOCTYPE html>
<html>
  <head>
    <title>ParentingNet</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </head>

  <body>
    <header>
      <div class="navbar-wrapper">
        <nav class="navbar navbar-inverse navbar-static-top offset-3 pull right">
          <div class="container-fluid">
            <div class="container">
              <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </button>
                <span class="header_logo"><%= link_to "子育てネット", root_path, style: "color: white; text-decoration: none;" %></span>
              </div>
              <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                  <% if user_signed_in? %>
                    <li><%= link_to "マイページ", user_path(current_user), class: "navbar_right_icon" %></li>
                    <li><%= link_to "投稿一覧", posts_path, class: "navbar_right_icon" %></li>
                    <li><%= link_to "質問一覧", questions_path, class: "navbar_right_icon" %></li>
                    <li><%= link_to "会員一覧", users_path, class: "navbar_right_icon" %></li>
                    <li><%= link_to "新規投稿", new_post_path, class: "navbar_right_icon" %></li>
                    <li><%= link_to "新規質問", new_question_path, class: "navbar_right_icon" %></li>
                    <li><%= link_to "アバウト", home_about_path, class: "navbar_right_icon" %></li>
                    <li><%= link_to "ログアウト", destroy_user_session_path, class: "navbar_right_icon", method: :delete %></li>
                  <% else %>
                    <li><%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, class: "navbar_right_icon", method: :post %></li>
                    <li><%= link_to "アバウト", home_about_path, class: "navbar_right_icon" %></li>
                    <li><%= link_to "新規登録", new_user_registration_path, class: "navbar_right_icon" %></li>
                    <li><%= link_to "ログイン", new_user_session_path, class: "navbar_right_icon" %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </nav>
      </div>
    </header>

  <main>
    <%= yield %>
  </main>

    <footer>
      <div class='container-fluid'>
        <div class='row'>
          <div class='col-md-12 col-sm-12 footer'>
            <div class="footer-text h5">CopyRight Parenting-net-2.inc</div>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>