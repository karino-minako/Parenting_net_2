<div class="container">
  <div class="row">
    <div class="col-md-9 col-sm-12">
      <h3>コメント編集</h3>
      <%= render 'layouts/errors', obj: @comment %>
      <%= form_with(model: @comment, url: post_comment_path(@comment.post,@comment), method: :patch, local: true) do |f| %>
        <%= f.text_area :comment, class: "form-control" %>
        <div class="actions">
          <%= f.submit '変更する', class: 'btn btn-primary col-xs-12' %>
        </div>
      <% end %>
    </div>

    <div class="col-md-3 col-sm-12 search">
      <%= render 'posts/search' %>
    </div>

  </div>
</div>
