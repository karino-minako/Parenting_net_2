<div class="container">
  <div class="row">
    <div class="col-md-9 col-sm-12">
      <h3>会員情報編集</h3>
      <% if @user.email == "guest@example.com" %>
        <p>ゲストユーザーは編集できません</p>
        <%= link_to :back do %>
          <button>戻る</button>
        <% end %>
      <% else %>
        <%= render 'layouts/errors', obj: @user %>
        <%= form_with model: @user, local: true do |f| %>
          <div class="field">
            <%= f.label :名前 %>
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :メールアドレス %>
            <%= f.text_area :email, class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :自己紹介文 %>
            <%= f.text_area :introduction, class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :プロフィール写真 %>
            <%= f.attachment_field :profile_image %>
          </div>

          <div class="actions">
            <%= f.submit '変更する', class: 'btn btn-primary col-xs-12'%>
          </div>
        <% end %>
        <%= link_to "パスワードを変更する", edit_user_registration_path(@user) %>
      <% end %>
    </div>

    <div class="col-md-3 col-sm-12 search">
      <%= render 'posts/search' %>
    </div>

  </div>
</div>