<td>
  <%= link_to user_path(post.user_id) do %>
    <%= attachment_image_tag(post.user, :profile_image, :fill, 40, 40, fallback: "no-image1.jpg") %><br>
  <% end %>
  <%= link_to post.user.name, user_path(post.user_id) %>
</td>
<td>
  <%= post.title %><br>
  <%= post.created_at.strftime("%Y/%m/%d") %>
</td>
<td>
  <% if post.post_liked_by?(current_user) %>
    <%= link_to post_post_likes_path(post), method: :delete, remote: true do %>
      <i class="fas fa-thumbs-up" aria-hidden="true"></i>
      <%= post.post_likes.count %><br>
    <% end %>
  <% else %>
    <%= link_to post_post_likes_path(post), method: :post, remote: true do %>
      <i class="far fa-thumbs-up" aria-hidden="true"></i>
      <%= post.post_likes.count %><br>
    <% end %>
  <% end %>
  <i class="far fa-comment" aria-hidden="true"></i> <%= post.comments.count %>
</td>
<td>
  <% post.tag_list.each do |tag| %>
    <%= link_to tag, posts_path(tag_name: tag), class: 'button btn btn-success' %>
  <% end %>
</td>
